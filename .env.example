# Environment
ENV=local

# MLflow Configuration (optional - leave empty for local tracking)
MLFLOW_TRACKING_URI=
MLFLOW_EXPERIMENT_NAME=persian_subtitle_search/inference/search

# MCP OpenSubtitles Configuration
MCP_OPENSUBTITLES_MODE=stdio
MCP_OPENSUBTITLES_URL=
MCP_OPENSUBTITLES_CALL_PATH=/tools/call
MCP_OPENSUBTITLES_AUTH_TOKEN=
MCP_OPENSUBTITLES_TOOL_SEARCH=search_subtitles
MCP_OPENSUBTITLES_TOOL_DOWNLOAD=download_subtitle
MCP_OPENSUBTITLES_TIMEOUT_S=10
MCP_OPENSUBTITLES_COMMAND=npx
MCP_OPENSUBTITLES_ARGS=-y,@opensubtitles/mcp-server
MCP_OPENSUBTITLES_ENV_MCP_MODE=stdio
# Get your OpenSubtitles API key from: https://www.opensubtitles.com/en/consumers
MCP_OPENSUBTITLES_ENV_OPENSUBTITLES_USER_KEY=your_opensubtitles_api_key_here

# Translation Configuration
TRANSLATION_PROVIDER=openai
# Get your OpenAI API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Storage
SUBTITLE_STORAGE_DIR=data/processed/subtitles
PROMPT_TRANSLATE_SRT=prompts/translate_srt.txt
